<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#BFFBBE">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">
            <TextView
                android:id="@+id/totalmoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="200"
                android:textSize="20sp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ballin"
                android:layout_width="70dp"
                android:layout_height="80dp"
                android:layout_weight="3.5"
                android:background="#BFFBBE"
                android:src="@drawable/allin"
                android:text="All in" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tallin"
                android:layout_width="match_parent"
                android:text="All in"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/breset"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#BFFBBE"
                android:paddingStart="15dp"
                android:src="@drawable/reset" />

            <ImageView
                android:id="@+id/bmycoin"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:background="#BFFBBE"
                android:paddingStart="35dp" />
            <ImageButton
                android:id="@+id/bdeal"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@drawable/deal"
                android:layout_weight="1"
                android:background="#BFFBBE"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <TextView
                android:id="@+id/treset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:gravity="center"
                android:text="Reset"
                android:textColor="#000"
                android:textSize="20dp"
                android:paddingStart="18dp"/>

            <TextView
                android:id="@+id/gamemoney"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_weight="1.20"
                android:gravity="center"
                android:text=""
                android:paddingStart="10dp"/>
            <TextView
                android:id="@+id/tdeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deal"
                android:textColor="#000"
                android:textSize="20dp"
                android:layout_weight="0.85"
                android:gravity="center"
                android:paddingEnd="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8">


            <ImageButton
                android:id="@+id/b50"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:background="#BFFBBE"
                android:src="@drawable/fifty" />

            <ImageButton
                android:id="@+id/b10"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:background="#BFFBBE"
                android:src="@drawable/ten" />
            <ImageButton
                android:id="@+id/b5"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:background="#BFFBBE"
                android:src="@drawable/five" />

            <ImageButton
                android:id="@+id/b1"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_weight="2"
                android:background="#BFFBBE"
                android:src="@drawable/one" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>